{
    "compilerOptions": {
      "target": "esnext",                        
      "module": "esnext",                        
      "lib": ["dom", "esnext"],                  
      "declaration": true,                      
      "declarationMap": true,                   
      "sourceMap": true,                        
      "outDir": "./dist",                       
      "rootDir": "./src",                       
      "moduleResolution": "node",               
      "esModuleInterop": true,                  
      "forceConsistentCasingInFileNames": true, 
      "strict": true,                           
      "skipLibCheck": true,
      "jsx": "react-jsx",                   
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  